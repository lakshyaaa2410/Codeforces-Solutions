    #include <bits/stdc++.h>
    #define ll long long int
    #define endl '\n'
    using namespace std;
     
    void solve()
    {
        string s;
        cin >> s;
        if(s.size() > 10)
            cout <<s[0]<<s.size()-2<<s[s.size()-1]<<endl;
        else
            cout << s << endl;
    }
     
    int main()
    {
        ios_base::sync_with_stdio(false);
        cin.tie(NULL);
        ll T = 1;
        cin >> T;
        while (T--) 
        {
            solve();
        }
     
    }
