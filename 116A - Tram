    #include <bits/stdc++.h>
    #define ll long long int
    #define nline '\n'
    using namespace std;
     
    void solve()
    {
        ll n;
        cin >> n;
        ll inTheTrain = 0, capacity = 0;
     
        for (int i = 0; i < n; i++)
        {
            ll a, b;
            cin >> a >> b;
     
            inTheTrain -= a;
            inTheTrain += b;
     
            capacity = max(capacity, inTheTrain);
        }
        cout << capacity << nline;
    }
     
    int main()
    {
        ios_base::sync_with_stdio(false);
        cin.tie(NULL);
        ll T = 1;
        while (T--) 
        {
            solve();
        }
    }
