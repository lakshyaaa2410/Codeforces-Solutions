    #include <bits/stdc++.h>
    #define ll long long int
    #define nline '\n'
    using namespace std;
     
    void solve()
    {
        ll n, k;
        cin >> n >> k;
     
        ll mid = n / 2;
        if (n & 1)
            mid++;
     
        if (k <= mid)
            cout << (2 * k) - 1 << nline;
        else
            cout << (k - mid) * 2 << nline;
    }
     
    int main()
    {
        ios_base::sync_with_stdio(false);
        cin.tie(NULL);
        ll T = 1;
        while (T--) 
        {
            solve();
        }
 
    }
