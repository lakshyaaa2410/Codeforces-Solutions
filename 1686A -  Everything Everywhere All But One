    #include <bits/stdc++.h>
    #define ll long long int
    #define nline '\n'
    using namespace std;
     
    void solve()
    {
        ll n;
        cin >> n;
        ll arr[n], sum = 0;
        for (int i = 0; i < n; i++)
        {
            cin >> arr[i];
            sum += arr[i];
        }
     
        bool hasAvg = false;
     
        for (int i = 0; i < n; i++)
        {
            if (sum - arr[i] == (n - 1) * arr[i])
            {
                hasAvg = true;
            }
        }
     
        hasAvg ? cout << "YES\n" : cout << "NO\n";
    }
     
    int main()
    {
        ios_base::sync_with_stdio(false);
        cin.tie(NULL);
        ll T = 1;
        cin >> T;
        while (T--) 
        {
            solve();
        }
     
    }
