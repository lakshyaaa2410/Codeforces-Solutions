#include <bits/stdc++.h>
#define ll long long int
#define endl '\n'
using namespace std;

void solve()
{
    ll w;
    cin >> w;
 
    w % 2 == 0 && w > 2 ? cout << "YES\n" : cout << "NO\n";
    
}
     
int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    ll T = 1;
    while (T--) 
    {
        solve();
    }    
}
