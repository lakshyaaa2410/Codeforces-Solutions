#include <bits/stdc++.h>
#define ll long long int
#define nline '\n'
using namespace std;

void solve()
{
    ll n, m, k, h;
    cin >> n >> m >> k >> h;

    unordered_set<ll> hSet;
    for (int i = 1; i < m; i++)
        hSet.insert(k * i);

    vector<ll> arr(n);
    for (int i = 0; i < n; i++)
        cin >> arr[i];

    ll ans = 0;

    for (int i = 0; i < n; i++)
    {
        ll diff = abs(arr[i] - h);
        if (hSet.count(diff))
            ans++;
    }

    cout << ans << nline;
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    ll T = 1;
    cin >> T;
    while (T--) 
    {
        solve();
    }

}
