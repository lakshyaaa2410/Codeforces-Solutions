        #include <bits/stdc++.h>
        #define ll long long int
        #define nline '\n'
        using namespace std;
         
        void solve()
        {
            ll n, k;
            cin >> n >> k;
         
            ll arr[n];
            for (int i = 0; i < n; i++)
                cin >> arr[i];
         
            int k_th_place = arr[k - 1];
            ll qualified = 0;
         
            for (int i = 0; i < n; i++)
                if (arr[i] >= k_th_place && arr[i] > 0)
                    qualified++;
         
            cout << qualified << nline;
        }
         
        int main()
        {
            ios_base::sync_with_stdio(false);
            cin.tie(NULL);
            ll T = 1;
            while (T--) 
            {
                solve();
            }
            
        }
